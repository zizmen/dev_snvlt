{% extends 'template_base.html.twig' %}

{% block Title %}
    {% trans %}SNVLT{% endtrans %} - {% trans %}Ministry Directions{% endtrans %}
{% endblock %}


{% block titre_page %}
    <h2 class="text-dark font-weight-bold mb-2">
        <img src="{{ asset('assets/images/webapp/direction.png') }}" alt="direction">  {% trans %}Ministry Directions{% endtrans %} - {% trans %}[ADD]{% endtrans %}
    </h2>
{% endblock %}


 {% block notifs %}
     {% include 'base/notifs.html.twig' %}
 {% endblock %}

 {% block menu %}
     {% include 'base/menu.html.twig' %}
 {% endblock %}

{% block page_content %}
    {% set i = 0 %}

    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <link href="{{ asset('assets/select2/select2.min.css') }}" rel="stylesheet" />


    <section class="section">
        <div class="card">

            <div class="card-body">
                {{ form_start(form, {'attr': {novalidate: 'novalidate'}}) }}
                <div class="row p-3 bg-white m-1">
                    <div class="col-md-6">
                        <div class="">{{ form_row(form.denomination) }}</div>
                        <div class="">{{ form_row(form.sigle) }}</div>
                        <div class="">
                            <table class="table w-100" style="border: 0px solid grey;background-color: #f8f5f5">
                                <tbody class="w-100">

                                {% for serviceminef in liste_services %}
                                    {% set i = i + 1 %}
                                    <tr class="w-100">
                                        <td style="font-weight: bold;">
                                        <span class="badge p-2  text-white" title="{{ serviceminef.libelleService }}" style="background-color: #0b511b">
                                            {% if (serviceminef.sigle) %}
                                                {{ serviceminef.sigle }}
                                            {% else %}
                                                {{ serviceminef.libelleService }}
                                            {% endif %}
                                        </span>
                                        </td>
                                    </tr>
                                {% endfor %}
                                <td class="alert-warning" style="font-weight: bold; font-size: 16px;">
                                    {{ i }} {% trans %}Services{% endtrans %}
                                </td>
                                </tbody>

                            </table>
                        </div>

                    </div>
                    <div class="col-md-6">
                        <div class="">{{ form_row(form.personneRessource) }}</div>
                        <div class="">{{ form_row(form.emailPersonneRessource) }}</div>
                        <div class="">{{ form_row(form.mobilePersonneRessource) }}</div>
                        <hr>
                        <a href="{{ path('ref_directions') }}" class="btn btn-sm bg-danger p-2 me-2 ms-5 text-white" style="font-weight: lighter"><i class="mdi mdi-backspace" style="font-size: 18px;margin-right: 10px;"></i>{% trans %}Back to list{% endtrans %}</a>
                        <button type="submit"  class="btn btn-sm bg-primary text-white p-2" style="margin-left: 10px;font-weight: lighter">

                            {% if (titre is same as "Ajouter un service MINEF") %}
                                <i class="mdi mdi-database-edit" style="font-size: 18px;margin-right: 10px"></i>{% trans %}Add Ministry Direction{% endtrans %}
                            {% else %}
                                <i class="mdi mdi-database-edit" style="font-size: 18px;margin-right: 10px"></i>{% trans %}Edit Ministry Direction{% endtrans %}
                            {% endif %}
                        </button>
                    </div>
                </div>

                {{ form_end(form) }}
            </div>
        </div>


        <!--Modification de l'dr -->

    </section>

    <script src="{{ asset('assets/webapp/assets/vendors/jquery/jquery.min.js') }}"></script>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="{{ asset('assets/select2/select2.min.js') }}"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-beta.1/dist/js/select2.min.js"></script>

    <script>
        // Simple Datatable

        $('.drs').select2({
            placeholder: "--{% trans %}Directions{% endtrans %}...",
            clear: true,
            width: '20%',
            theme: 'classic'
        });
    </script>
    <script>

        $('body').on('click', '.editBtn', function(e){
            e.preventDefault();
            $.ajax({
                url:'{{ path('edit-dr') }}/' + this.id,
                type : 'POST',
                data : {id_dr: this.id},
                success: function(response){
                    console.log(response);
                    let drInfo = JSON.parse(response);

                    $('#drs_numero_dr').val(drInfo.code_dr);
                    $('#drs_nom_vernaculaire').val(drInfo.nom_vernaculaire);
                    $('#drs_nom_scientifique').val(drInfo.nom_scientifique);
                    $('#drs_categorie_dr').val(drInfo.categorie);
                    $('#drs_dm_minima').val(drInfo.dm_minima);
                    $('#drs_famille_dr').val(drInfo.famille_dr);
                    $('#drs_taxe_abattage').val(drInfo.taxe_abattage);
                    $('#drs_taxe_preservation').val(drInfo.taxe_preservation);

                }
            })
        })
    </script>
    <script src="{{ asset('assets/webapp/assets/js/main.js') }}"></script>


{% endblock %}

