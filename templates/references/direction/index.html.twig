{% extends 'template_base.html.twig' %}

{% block Title %}
    {% trans %}SNVLT{% endtrans %} - {% trans %}Ministry Directions{% endtrans %}
{% endblock %}

{% block titre_page %}
    <h2 class="text-dark font-weight-bold mb-2">
        <img src="{{ asset('assets/images/webapp/direction.png') }}" alt="{% trans %}Direction{% endtrans %}">  {% trans %}Ministry Directions{% endtrans %}
    </h2>
    <div class="d-sm-flex justify-content-xl-between align-items-center mb-2">
        <div class="btn-group p-1 rounded-5 " role="group" aria-label="Basic example">
            <a class="btn btn-inverse-danger p-2 mt-2" style="border: 0px; font-size: 16px;" href="{{ path('direction.edit') }}"> <i class="mdi mdi-plus-circle me-2" style="font-size: 20px;"></i>{% trans %}Add{% endtrans %}</a>
        </div>
    </div>
{% endblock %}


 {% block notifs %}
     {% include 'base/notifs.html.twig' %}
 {% endblock %}

 {% block menu %}
     {% include 'base/menu.html.twig' %}
 {% endblock %}

{% block page_content %}
    <link rel="stylesheet" href="{{ asset('assets/webapp/assets/vendors/simple-datatables/style.css') }}">
    <section class="section">
        <div class="card">
            <div class="card-body">
                <table class="table table-responsive" id="drs">
                    <thead>
                    <tr style="background: #f55e04;color: #fcf8f8">
                        <th>{% trans %}Acronym{% endtrans %}</th>
                        <th>{% trans %}Name{% endtrans %}</th>
                        <th>{% trans %}Manager{% endtrans %}</th>
                        <th>{% trans %}Manager email{% endtrans %}</th>
                        <th>{% trans %}Manager Phone{% endtrans %}</th>
                        <th>{% trans %}Number of services{% endtrans %}</th>
                        <th>{% trans %}Number of agents{% endtrans %}</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for direction in directions %}

                        <tr style="background-color: #e6f8e7">
                            <td class="text-dark fw-bold"><a class="link-dark editBtn" style="font-weight: bold;color: #370905" href="{{ path('direction.edit', {'id_direction': direction.id })}}" id="{{ direction.id }}">{{ direction.sigle }}</a></td>
                            <td>{{ direction.denomination }}</td>
                            <td><span class="badge text-white p-2" style="font-weight: lighter;font-size: 14px;border-radius: 10px;background-color: rgba(36,35,35,0.89)">{{ direction.personneRessource }}</span></td>
                            <td><span class="badge alert-light text-white p-2" style="font-weight: lighter;font-size: 14px;border-radius: 10px;;background-color: rgba(36,35,35,0.89)">{{ direction.emailPersonneRessource }}</span></td>
                            <td><span class="badge alert-light text-white p-2" style="font-weight: lighter;font-size: 14px;border-radius: 10px;;background-color: rgba(36,35,35,0.89)">{{ direction.mobilePersonneRessource }}</span></td>
                            <td class="text-center">{{ direction.serviceMinefs.count}}</td>
                            <td class="text-center">{{ direction.users.count}}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

    </section>

    <script src="{{ asset('assets/webapp/assets/vendors/simple-datatables/simple-datatables.js') }}"></script>
    <script src="{{ asset('assets/webapp/assets/vendors/jquery/jquery.min.js') }}"></script>

    <script>
        // Simple Datatable
        let table1 = document.querySelector('#drs');
        let dataTable = new simpleDatatables.DataTable(table1);
    </script>
{% endblock %}

