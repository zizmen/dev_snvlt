{% block page_content %}
    <link rel="stylesheet" href="{{ asset('assets/webapp/assets/vendors/simple-datatables/style.css') }}">

    <section class="section">
        <div class="card">

            <div class="card-body">
                <table class="table" id="ddefs">
                    <thead>
                    <tr style="background: #f55e04;color: #fcf8f8">
                        <th>{% trans %}DD Name{% endtrans %}</th>
                        <th>{% trans %}Manager{% endtrans %}</th>
                        <th>{% trans %}Manager email{% endtrans %}</th>
                        <th>{% trans %}Manager Phone{% endtrans %}</th>
                        <th>{% trans %}Regional Direction{% endtrans %}</th>
                        <th>{% trans %}Number of Cantonments{% endtrans %}</th>
                    </tr>
                    </thead>
                    <tbody>
                        {% for ddef in liste_ddefs %}
                            <tr>
                                <td class="text-dark fw-bold"><a class="link-dark editBtn" style="font-weight: bold;color: #370905"  href="{{ path('ddef.edit', {'id_ddef': ddef.id })}}" id="{{ ddef.id }}">{{ ddef.nomDdef }}</a></td>
                                <td>{{ ddef.personneRessource }}</td>
                                <td>{{ ddef.emailPersonneRessource }}</td>
                                <td>{{ ddef.mobilePersonneRessource }}</td>
                                <td>{{ ddef.codeDr.denomination }}</td>
                                <td>{{ ddef.cantonnements.count}}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

    </section>

    <script src="{{ asset('assets/webapp/assets/vendors/simple-datatables/simple-datatables.js') }}"></script>
    <script src="{{ asset('assets/webapp/assets/vendors/jquery/jquery.min.js') }}"></script>

    <script>



