            <span class="text-light fs-5 fw-bold w-100 p-1">DDEF - {{ app.user.codeDdef.nomDdef }}</span>
        </div>
    {% elseif  (app.user.codeOperateur.id is same as 7) %}
        <div class="bg-light text-center  p-2">
            <span class=" text-dark fw-bold w-100 p-1">CEF - {{ app.user.codeCantonnement.nomCantonnement }}</span>
        </div>
    {% elseif  (app.user.codeOperateur.id is same as 10) %}
