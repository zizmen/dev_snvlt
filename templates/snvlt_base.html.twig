                {% elseif (app.user.codeDirection.id) %}
                    <div class="text-center  p-2" style="background-color: #f4dddd">
                        <span class=" text-dark fw-bold w-100 p-1">{{ app.user.codeDirection.denomination}}</span>
                    </div>
                            {% else%}
                    <div class="text-center  p-2" style="background-color: #c1bfbf">
                        <span class=" text-dark fw-bold w-100 p-1">{{ app.user.codeDirection.denomination}}</span>
                    </div>
        {% endif %}

    {% elseif  (app.user.codeOperateur.id is same as 5) %}
