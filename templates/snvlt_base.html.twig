        </div>
    {% elseif  (app.user.codeOperateur.id is same as 3) %}
        <div class="alert-light-primary text-center  p-2">
            <span class=" text-dark fw-bold w-100 p-1">{{ app.user.codeindustriel.raisonSocialeUsine }}</span>
        </div>
    {% elseif  (app.user.codeOperateur.id is same as 1) %}
        {% if (app.user.codeService.id) %}
                <div class="text-center  p-2" style="background: linear-gradient(111.4deg, rgba(48,127,175,0.6) 0.4%, rgba(55,71,168,0.6) 0.4%, rgb(8,57,235) 100.2%); ">
                    <span class=" text-light fw-bold w-100 p-1 fs-4">{{ app.user.codeService.libelleService}} / {{ app.user.codeDirection.sigle}} / MINEF</span>
